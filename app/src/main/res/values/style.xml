<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="newtaxi_title">
        <item name="android:textSize">@dimen/newTaxi_title_size</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="fontFamily">@font/bmjua</item>
    </style>

    <style name="newtaxi_time">
        <item name="android:textSize">@dimen/newTaxi_time_size</item>
        <item name="android:textColor">#FF9595</item>
        <item name="fontFamily">@font/bmjua</item>
    </style>

    <style name="newtaxi_default">
        <item name="android:textSize">@dimen/newTaxi_default_size</item>
        <item name="fontFamily">@font/bmjua</item>
    </style>

    <style name="newtaxi_button">
        <item name="android:textSize">@dimen/newTaxi_buttonTxt_size</item>
        <item name="fontFamily">@font/bmjua</item>
    </style>

    <!--메인화면 타이틀 글씨-->
    <style name="main_title_text">
        <item name="android:textSize">@dimen/main_title_size</item>
        <item name="fontFamily">@font/bmjua</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--새 글 작성 화면 카드뷰-->
    <style name="newtaxi_cardview">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <!--합승 글 아이템-->
    <style name="taxi_item_default_text">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/bmjua</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!--택시 아이템 상세보기 타이틀-->
    <style name="detail_taxi_title">
        <item name="android:textSize">@dimen/newTaxi_title_size</item>
        <item name="fontFamily">@font/bmjua</item>
    </style>

    <!--택시 아이템 상세보기 그림-->
    <style name="detail_taxi_img">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

</resources>