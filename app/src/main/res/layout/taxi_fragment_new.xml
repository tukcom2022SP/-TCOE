<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/newtaxi_title"
                android:text="위치"
                android:fontFamily="@font/bmjua"/>

            <RadioGroup
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_jeongwang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="정왕역"
                    android:fontFamily="@font/bmjua"/>

                <RadioButton
                    android:id="@+id/rb_oido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="오이도역"
                    android:fontFamily="@font/bmjua"/>

            </RadioGroup>

            <!--오이도역 선택시에만 보이는 출구 선택 스피너-->
            <Spinner
                android:id="@+id/location_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/newtaxi_title"
                android:text="성별 제한"
                android:fontFamily="@font/bmjua"/>

            <RadioGroup
                android:id="@+id/sex_restriction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_any_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:fontFamily="@font/bmjua"
                    android:text="성별 상관 없음"/>

                <RadioButton
                    android:id="@+id/rb_same_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="동성만"
                    android:fontFamily="@font/bmjua"/>

                <!--누르면 타임피커 다이얼로그로 뜨도록 함-->

            </RadioGroup>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!--출발 시간 설정-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/newtaxi_title"
                android:text="출발 시간 설정"
                android:fontFamily="@font/bmjua"/>

            <TextView
                android:id="@+id/departure_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:fontFamily="@font/bmjua"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시"
                android:fontFamily="@font/bmjua"/>

            <TextView
                android:id="@+id/departure_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분"
                android:fontFamily="@font/bmjua"/>

            <TextView
                android:id="@+id/am_or_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="am"
                android:fontFamily="@font/bmjua"/>

            <Button
                android:id="@+id/set_departure_time_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="변경"
                android:textSize="10sp"
                android:fontFamily="@font/bmjua"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--메모-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/newtaxi_title"
                android:text="메모?유의사항?"
                android:fontFamily="@font/bmjua"/>

            <EditText
                android:id="@+id/newtaxi_memo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="\n간단한 메모 작성? \n"
                android:fontFamily="@font/bmjua"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:fontFamily="@font/bmjua"/>

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성"
            android:fontFamily="@font/bmjua"/>

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:fontFamily="@font/bmjua"/>


    </LinearLayout>


</LinearLayout>