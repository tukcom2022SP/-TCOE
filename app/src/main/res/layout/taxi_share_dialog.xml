<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="@color/bright_green"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_margin="20dp">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    style="@style/newtaxi_cardview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            style="@style/detail_taxi_img"
                            android:src="@drawable/taxi_yellow"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_horizontal"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/detail_ampm"
                                style="@style/newtaxi_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/item_departure_title"
                                android:text="오전" />

                            <TextView
                                android:id="@+id/detail_departure_hour"
                                style="@style/newtaxi_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/item_ampm"
                                android:text="" />

                            <TextView
                                android:id="@+id/detail_departure_hour_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/item_departure_hour"
                                android:layout_centerVertical="true"
                                style="@style/newtaxi_time"
                                android:text="시 "/>

                            <TextView
                                android:id="@+id/detail_departure_minute"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/detail_departure_hour_text"
                                android:layout_centerVertical="true"
                                style="@style/newtaxi_time"
                                android:text=""/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/detail_departure_minute"
                                android:layout_centerVertical="true"
                                style="@style/newtaxi_time"
                                android:text="분  "/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/detail_departure_minute"
                                android:layout_centerVertical="true"
                                style="@style/newtaxi_time"
                                android:textColor="@color/gray"
                                android:text="출발"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/detail_position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/taxi_item_default_text"
                                android:text=""/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/taxi_item_default_text"
                                android:text="역 "/>

                            <TextView
                                android:id="@+id/detail_entrance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/taxi_item_default_text"
                                android:text=""/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/taxi_item_default_text"
                                android:text="번 출구"/>

                        </LinearLayout>



                    </LinearLayout>






                </androidx.cardview.widget.CardView>



                <!--성별 제한-->
                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/newtaxi_cardview">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="30dp"
                        android:background="#00FFFFFF"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/detail_taxi_title"
                            android:text="합승 가능 성별"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/detail_male"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/male"/>

                            <ImageView
                                android:id="@+id/detail_female"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/female"/>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!--유의사항-->
                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/newtaxi_cardview">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="30dp"
                        android:background="#00FFFFFF"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/detail_taxi_img"
                            android:src="@drawable/memo"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/detail_taxi_title"
                            android:text="유의사항"
                            android:layout_marginBottom="10dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:background="@color/purple_200">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="하이하이하이하이"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!--합승 확정 명단-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/detail_share_member"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/newtaxi_cardview">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="30dp"
                        android:background="#00FFFFFF"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/detail_taxi_img"
                            android:src="@drawable/share_member"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/detail_taxi_title"
                            android:text="합승 확정 리스트"
                            android:layout_marginBottom="10dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/detail_currentNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/newtaxi_time"
                                android:text="3"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/newtaxi_time"
                                android:text="/"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:id="@+id/detail_maxNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/newtaxi_time"
                                android:text="5"
                                android:layout_marginBottom="10dp"/>

                        </LinearLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:background="@color/purple_200">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="하이하이하이하이"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!--합승 요청-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/detail_share_req"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/newtaxi_cardview">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="30dp"
                        android:background="#00FFFFFF"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/detail_taxi_img"
                            android:src="@drawable/request"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/detail_taxi_title"
                            android:text="합승 요청"
                            android:layout_marginBottom="10dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:background="@color/purple_200">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="하이하이하이하이"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>



    <!--하단 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/detail_deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/newtaxi_button"
            android:text="삭제"/>

        <Button
            android:id="@+id/detail_reqBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/newtaxi_button"
            android:text="합승 요청"
            android:visibility="gone"/>

        <Button
            android:id="@+id/detail_cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/newtaxi_button"
            android:text="닫기" />

    </LinearLayout>

</LinearLayout>