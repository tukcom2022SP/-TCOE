<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/newtaxi_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_ampm"
                style="@style/newtaxi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/item_departure_title"
                android:text="오전" />

            <TextView
                android:id="@+id/item_departure_hour"
                style="@style/newtaxi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/item_ampm"
                android:text="" />

            <TextView
                android:id="@+id/item_departure_hour_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_departure_hour"
                android:layout_centerVertical="true"
                style="@style/newtaxi_time"
                android:text="시 "/>

            <TextView
                android:id="@+id/item_departure_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_departure_hour_text"
                android:layout_centerVertical="true"
                style="@style/newtaxi_time"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_departure_minute"
                android:layout_centerVertical="true"
                style="@style/newtaxi_time"
                android:text="분  "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_departure_minute"
                android:layout_centerVertical="true"
                style="@style/newtaxi_time"
                android:textColor="@color/gray"
                android:text="출발"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/item_max_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    style="@style/newtaxi_time"
                    android:textColor="@color/gray"
                    android:text="5"/>

                <TextView
                    android:id="@+id/item_per"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/item_max_num"
                    style="@style/newtaxi_time"
                    android:textColor="@color/gray"
                    android:text=" / "/>

                <TextView
                    android:id="@+id/item_current_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/item_per"
                    style="@style/newtaxi_time"
                    android:textColor="@color/gray"
                    android:text="1"/>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/taxi_item_default_text"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/taxi_item_default_text"
                android:text="역 "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/taxi_item_default_text"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/taxi_item_default_text"
                android:text="번 출구"/>




        </LinearLayout>



    </LinearLayout>






</androidx.cardview.widget.CardView>